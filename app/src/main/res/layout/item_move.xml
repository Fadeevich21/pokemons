<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/move_level_metadata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/move_name_metadata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/move_level_metadata" />

        <TextView
            android:id="@+id/move_power_metadata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Power"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/move_name_metadata" />

        <TextView
            android:id="@+id/move_accuracy_metadata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accuracy"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/move_power_metadata" />

        <TextView
            android:id="@+id/move_pp_metadata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PP"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/move_accuracy_metadata" />

        <TextView
            android:id="@+id/move_type_metadata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/move_pp_metadata" />

        <TextView
            android:id="@+id/move_details_metadata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/move_type_metadata" />


        <TextView
            android:id="@+id/item_move_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            app:layout_constraintStart_toStartOf="@id/item_move_accuracy"
            app:layout_constraintTop_toTopOf="@id/move_level_metadata" />

        <TextView
            android:id="@+id/item_move_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tackle"
            app:layout_constraintStart_toStartOf="@id/item_move_accuracy"
            app:layout_constraintTop_toTopOf="@id/move_name_metadata" />

        <TextView
            android:id="@+id/item_move_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40"
            app:layout_constraintStart_toStartOf="@id/item_move_accuracy"
            app:layout_constraintTop_toTopOf="@id/move_power_metadata" />

        <TextView
            android:id="@+id/item_move_accuracy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="100%"
            app:layout_constraintStart_toEndOf="@id/move_accuracy_metadata"
            app:layout_constraintTop_toTopOf="@id/move_accuracy_metadata" />

        <TextView
            android:id="@+id/item_movie_pp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="35"
            app:layout_constraintStart_toStartOf="@id/item_move_accuracy"
            app:layout_constraintTop_toTopOf="@id/move_pp_metadata" />

        <TextView
            android:id="@+id/item_move_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Normal"
            app:layout_constraintStart_toStartOf="@id/item_move_accuracy"
            app:layout_constraintTop_toTopOf="@id/move_type_metadata" />

        <TextView
            android:id="@+id/item_move_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="details"
            app:layout_constraintStart_toStartOf="@id/item_move_accuracy"
            app:layout_constraintTop_toTopOf="@id/move_details_metadata" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>