<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/item_move_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="5dp"
        android:text="1"/>

    <TextView
        android:id="@+id/item_move_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/item_move_level"
        app:layout_constraintStart_toEndOf="@id/item_move_level"
        android:paddingHorizontal="5dp"
        android:text="Tackle"/>

    <TextView
        android:id="@+id/item_move_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/item_move_level"
        app:layout_constraintStart_toEndOf="@id/item_move_name"
        android:paddingHorizontal="5dp"
        android:text="40"/>

    <TextView
        android:id="@+id/item_move_accuracy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/item_move_level"
        app:layout_constraintStart_toEndOf="@id/item_move_power"
        android:paddingHorizontal="5dp"
        android:text="100%"/>

    <TextView
        android:id="@+id/item_movie_pp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/item_move_level"
        app:layout_constraintStart_toEndOf="@id/item_move_accuracy"
        android:paddingHorizontal="5dp"
        android:text="35"/>

    <TextView
        android:id="@+id/item_move_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/item_move_level"
        app:layout_constraintStart_toEndOf="@id/item_movie_pp"
        android:paddingHorizontal="5dp"
        android:text="Normal"/>

    <TextView
        android:id="@+id/item_move_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_move_level"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="5dp"
        android:text="details"/>

</androidx.constraintlayout.widget.ConstraintLayout>